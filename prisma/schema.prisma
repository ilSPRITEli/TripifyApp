generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Trip {
  id          String     @id @default(uuid()) @db.Uuid
  title       String
  description String
  startDate   DateTime
  endDate     DateTime
  travelers   Int
  isTemplate  Boolean
  /// calculated from destinations (เก็บเป็นค่า numeric)
  budget      Decimal    @db.Decimal(12, 2)
  activities  Activity[]

  destinations  Destination? @relation(fields: [destinationId], references: [id])
  destinationId String?      @db.Uuid
  Interest      Interest?    @relation(fields: [interestId], references: [id])
  interestId    String?      @db.Uuid

  @@map("trips")
}

/// Destination: เมือง/ประเทศในหนึ่งทริป
model Destination {
  id          String  @id @default(uuid()) @db.Uuid
  country     String
  city        String
  description String
  /// calculated from activities
  budget      Decimal @db.Decimal(12, 2)

  trip Trip[]

  @@map("destinations")
}

/// Activity: กิจกรรมภายในเมืองปลายทาง
model Activity {
  id          String   @id @default(uuid()) @db.Uuid
  name        String
  description String
  date        DateTime // เก็บวันที่ (UTC/เขตเวลาให้จัดการในแอป)
  time        String // "HH:mm" หรือ "HH:mm:ss" ตามที่คุณใช้ใน UI
  latitude    Float
  longitude   Float
  location    String
  budget      Decimal  @db.Decimal(12, 2)

  // relation
  trip   Trip?  @relation(fields: [tripId], references: [id], onDelete: Cascade)
  tripId String @db.Uuid

  @@index([tripId])
  @@map("activities")
}

model Interest {
  id   String @id @default(uuid()) @db.Uuid
  name String @unique
  icon String
  Trip Trip[]

  @@map("interests")
}
